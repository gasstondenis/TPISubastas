<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TPISubastas.Sitio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/layout-styles.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header class="card-header">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">TPISubastas</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarSupportedContent">
                    <ul>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a class="p-2 bd-highlight" id="vender" asp-controller="Subasta" asp-action="Crear">Vender</a>
                            </li>
                            <li>
                                <a class="p-2 bd-highlight" asp-controller="Account" asp-action="Register">Registrarse</a>
                            </li>

                            <li>
                                <a class="p-2 bd-highlight" id="login" asp-controller="Account" asp-action="Login">Iniciar Sesión</a>
                            </li>

                        }
                        else
                        {
                            <li>
                                <a class="p-2 bd-highlight" id="vender" asp-controller="Subasta" asp-action="Crear">Vender</a>
                            </li>
                            <li>
                                <a id="logout" class="p-2 bd-highlight" id="vender" asp-controller="Account" asp-action="Logout">Cerrar sesión</a>
                            </li>
                        }



                    </ul>

                </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - TPISubastas.Sitio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/ed8216d471.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
